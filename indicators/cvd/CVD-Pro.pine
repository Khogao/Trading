// CVD+Price Divergence
showRegular = input.bool(true, "C+P: Phân kỳ thường", group = GRP_DIVERGENCE)
showHidden = input.bool(true, "C+P: Phân kỳ ẩn", group = GRP_DIVERGENCE)
