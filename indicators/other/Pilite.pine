        array.push(vsaIcons, icon)
        array.push(vsaColors, col)
        array.push(vsaYs, y)
        array.push(vsaLocs, loc == location.abovebar ? "abovebar" : "belowbar")

f_addVSA(isSC,   "SC",   "ðŸ’¥", color.lime,    low, location.belowbar)
