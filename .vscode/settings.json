{
    // ═══════════════════════════════════════════════════════════════════════
    // 🔥 TOP PRIORITY: BẮT BUỘC TIẾNG VIỆT TRIỆT ĐỂ
    // ═══════════════════════════════════════════════════════════════════════
    
    "claude.path": "C:\\Users\\lengu\\AppData\\Roaming\\npm\\claude.cmd",
    "claude.autoConnect": true,
    "claude.additionalDirectories": [
        "indicators",
        "scripts",
        "templates",
        "docs"
    ],
    "claude.permissionMode": "bypassPermissions",
    "claude.dangerouslySkipPermissions": true,
    "claudeCodeChat.permissions.yoloMode": true,
    
    // MANDATORY: ALWAYS respond in Vietnamese
    "user.language": "vi",
    
    // ═══════════════════════════════════════════════════════════════════════
    // 🎯 USER PROFILE: NON-TECHNICAL TRADER
    // ═══════════════════════════════════════════════════════════════════════
    // User KHÔNG có background về code, computer science, IT
    // → PHẢI giải thích thuật ngữ kỹ thuật bằng ngôn ngữ đơn giản
    // → PHẢI dùng ví dụ thực tế để minh họa khái niệm
    // → TRÁNH thuật ngữ xa lạ trực tiếp, PHẢI giải thích ngay
    // → Mục tiêu: Hiểu nhau RÕ RÀNG, không nhầm lẫn khái niệm
    "user.prefersNonTechnicalExplanations": true,  // ✅ BẮT BUỘC giải thích đơn giản!
    "user.background": "non-technical-trader",  // Trader KHÔNG có IT background
    "user.technicalLevel": "beginner",  // Level: người mới bắt đầu về code
    "user.requiresContextExplanations": true,  // YÊU CẦU giải thích context cho mọi thuật ngữ
    
    // ═══════════════════════════════════════════════════════════════════════
    // 📝 PINE SCRIPT VALIDATION (Pine v6 + CVD Rules)
    // ═══════════════════════════════════════════════════════════════════════
    
    "files.associations": {
        "*.pine": "pine",
        "*.md": "markdown"
    },
    
    // ═══════════════════════════════════════════════════════════════════════
    // 💻 EDITOR SETTINGS
    // ═══════════════════════════════════════════════════════════════════════
    
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": false,
    "editor.wordWrap": "off",
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    
    "[pine]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wordWrap": "off",
        "editor.formatOnSave": false
    },
    
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    
    "[powershell]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    
    // ═══════════════════════════════════════════════════════════════════════
    // 🔍 SEARCH & EXCLUDE
    // ═══════════════════════════════════════════════════════════════════════
    
    "search.exclude": {
        "**/.git": true,
        "**/z_archive": true,
        "**/*.bak": true
    },
    
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/z_archive/**": true
    },
    
    // ═══════════════════════════════════════════════════════════════════════
    // 🐙 GIT SETTINGS
    // ═══════════════════════════════════════════════════════════════════════
    
    "git.enabled": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    
    // ═══════════════════════════════════════════════════════════════════════
    // 💻 TERMINAL
    // ═══════════════════════════════════════════════════════════════════════
    
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.fontSize": 14,
    
    // ═══════════════════════════════════════════════════════════════════════
    // 🚀 PERFORMANCE
    // ═══════════════════════════════════════════════════════════════════════
    
    "remote.WSL.enabled": false,
    "files.maxMemoryForLargeFilesMB": 4096,
    "search.maxResults": 20000
}